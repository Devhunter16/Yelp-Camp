<!--This ejs page is a template for every other ejs page.
     This is made possible by ejs-mate. -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YelpCamp</title>

    <!-- Including bootstrap styling here. -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- Including Mapbox CDN here in order to display a map on our webpages. Had to include crossorigin
     because helmet wants to block the Mapbox CDN because it comes from outside of our server. -->
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.11.0/mapbox-gl.js' crossorigin></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.11.0/mapbox-gl.css' rel='stylesheet' crossorigin/>

    <!-- Including the css for the cluster map and the map on our "Show campground" page. -->
    <link href="/stylesheets/app.css" rel="stylesheet" />
</head>

<!-- Doing some styling with the bootstrap flexbox utility
below. Making viewheight at least 100, and using mt-auto 
(margin top auto) in our "footer.ejs" file to
push the footer to the bottom of the page. -->

<body class="d-flex flex-column vh-100">
    <!-- Including our navbar.ejs partial in this template
    so that it shows up on all of our web pages. -->
    <%- include("../partials/navbar") %>
    <main class="container mt-5">
        <%- include("../partials/flash") %>
        <%- body -%>
    </main>
    <%- include("../partials/footer") %>
    <!-- The JS for bootstrap styling. -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>

    <!--This script allows us to create our form validations in the "edit" and "new" .ejs 
    files. We just copied and pasted this from the bootstrap docs. See validateForms.js file. -->
    <script src="/javascripts/validateForms.js"></script>
</body>

</html>